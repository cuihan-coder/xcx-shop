	bottom: 0rpx;
	background: #fff;
	border-top: solid #dfdfdf 1rpx;
}
.pic-font-class{
	margin: 0 20rpx;
}
.pic-font-class view:nth-child(1){
	height: 40rpx;
	text-align: center;
}
.pic-font-class image{
	width: 40rpx;
	height: 40rpx;
}
.pic-font-class view:nth-child(2){
